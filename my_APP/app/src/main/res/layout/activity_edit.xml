<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/whole"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLabel"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_edit_scene">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/edit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@drawable/bottom_border"
            android:theme="@style/toolbar_theme"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="#000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:orientation="horizontal">

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal">-->

            <!--                <TextView-->
            <!--                    android:id="@+id/dateText"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="fill_parent"-->
            <!--                    android:layout_weight="1"-->
            <!--                    android:text="现在是2017/1/1" />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/timeText"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginLeft="10dp"-->
            <!--                    android:layout_weight="1"-->
            <!--                    android:text="00:00" />-->
            <!--            </LinearLayout>-->

            <TextView
                android:id="@+id/alarmView"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="提醒时间：" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:text="分组："
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/currentFlag"
                android:layout_width="84dp"
                android:layout_height="match_parent"

                android:layout_gravity="end"
                android:layout_weight="2"
                 />
        </LinearLayout>
        <!--        <ImageButton-->
        <!--            android:id="@+id/alarmButton"-->
        <!--            android:layout_width="40dp"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:background="@drawable/alarm"-->
        <!--            android:onClick="setAlarm" />-->
    </LinearLayout>

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left|center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_border"
        android:gravity="center_vertical"
        android:hint="标题"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left|center_horizontal"
        android:background="@drawable/bottom_border"
        android:layout_marginTop="-10dp"
        android:layout_margin="12dp"
        android:layout_weight="30"
        android:gravity="left"
        android:hint="内容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="0.93"
        android:alpha="0.8"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/tagRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:background="@drawable/tag_container"
            android:gravity="center_vertical|center|center_horizontal"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <RadioButton
                android:id="@+id/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/radio"
                android:button="@null"
                android:checked="false" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <RadioButton
                android:id="@+id/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/radio2"
                android:button="@null"
                android:checked="false" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <RadioButton
                android:id="@+id/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/radio3"
                android:button="@null"
                android:checked="false" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <RadioButton
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/radio4"
                android:button="@null"
                android:checked="false" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </RadioGroup>
    </LinearLayout>


</LinearLayout>